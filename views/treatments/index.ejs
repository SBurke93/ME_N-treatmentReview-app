<% include ../partials/header %>

<!--if User Is Admin-->
<% if(currentUser && currentUser.isAdmin) { %>
    <div class="row">
        <div class="adminAccess">
            <div class="adminMsg">
                <strong></strong><h5 class="left">
                Administrative access enabled. Hello  <%= currentUser.username %>
                </h5></strong>
                <i class="material-icons small right" style="color:teal;">verified_user</i>
            </div>
        </div>
    </div>
<% } %>

    
            <i class="material-icons medium right" style="color:teal;">nature_people</i>

    <h1>Welcome to the Treatments Page</h1>
    <p>
        All treatments for the Wellness Center will be located here. 
        Browse at youre leisure or use our handy searchbar to look up your favorite treatments in an instant!
    </p>
    <br>
    
    <a href="/treatments/new">Add New Treatment</a>

    <br>
    <br>

    <div class="row">
    <div class="col s12">

    <% if(noMatch !== null) { %>
        <h3> <%= noMatch %> </h3> 

        <% } %>

        <div class="row" id="topbarsearch">  
                <form action="/treatments" method="GET" class="">
                   <div class="input-field col s6 s12 red-text">
                        <i class="deep-purple-text material-icons prefix">search</i>
                        <input type="text" placeholder="search treatments..." id="autocomplete-input" name="search" class="autocomplete dark-text" >
            
                        <button class=" right btn waves-effect waves-light" type="submit" name="action">Search
                            </button>
                        </div>
                   
                </form>
            </div>
    </div>
    </div>

<!--forEach loop through Array-->
<% treatments.forEach(function(treatment){ %>
    <v class="row">

        <div class="col s12 m6 l4" style="padding-bottom:25px;">

            <div class="card hoverable z-depth-4 deep-purple darken-2">
                <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="<%= treatment.image %>" style="overflow: hidden;">
            </div>

            <div class="card-content activator"style="padding-top:6px; padding-bottom:7px;">
                <span class="card-title activator white-text text-darken-4">
                    <%= treatment.name %>
                    <i class="material-icons right">arrow_drop_up</i>
                </span>

    
                <span style="float: right;">
                    <a class="waves-effect waves-light btn btn-large" id="indexBtn"
                    href=" <%= treatment._id %> ">View More</a>
                </span>
            </div>

            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">
                    <%= treatment.name %>
                    <i class="material-icons right">highlight_off</i>
                </span>
     
                <p><strong><%= treatment.description %></strong></p>
            </div>

            
        </div>

    </div> 
   
<% }); %>
 </div>
 

<br>
<br>

<% include ../partials/footer %>